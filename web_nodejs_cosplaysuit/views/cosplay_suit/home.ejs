      color: rgb(85, 83, 83);
    }

    nav i {
      font-size: 18px;
      /* text-align: left; */
    }

    .logout {
      position: absolute;
      top: 20px;
      bottom: 20px;
    }

    /* Main Section */
    .main {

      width: 100%;

    }

    .main-top {
      background: rgb(246, 246, 246);
      width: 100%;

      padding: 40px 10px 20px 10px;
      text-align: center;
      font-size: 18px;
      letter-spacing: 1.5px;
      text-transform: uppercase;

    }

    .main-top1 {
      margin-top: 60px;
      width: 100%;
      padding: 10px;
      text-align: center;

    }

    .main-body {
      padding: 10px 10px 10px 20px;
    }

    h1 {
      margin: 20px 10px;
    }
  </style>
</head>

