      top: 0;
      left: 0;
      bottom: 0;
      width: 310px;
      height: 110vh;
      background: rgb(246, 246, 246);
    }

    .navbar {
      width: 90%;
      margin: 0 auto;
    }

    .logo {
      margin: 2rem 0 1rem 0;
      padding-bottom: 3rem;
      display: flex;
      align-items: center;
    }

    .logo img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
    }

    .logo h1 {
